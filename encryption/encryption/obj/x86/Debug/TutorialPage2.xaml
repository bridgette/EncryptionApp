        		<Run/>
        		<LineBreak/>
        		<Run Text="We protected your private key with your password."/>
        	</TextBlock>
        	<Button x:ConnectionId='1' Content="Got it." HorizontalAlignment="Left" Margin="157,504.5,0,-0.167" VerticalAlignment="Top" Height="74" Width="195"                            BorderThickness="1" FontFamily="Segoe UI Light"/>
